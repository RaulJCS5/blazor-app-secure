@page "/blogdetails/{blogId:int}"
@using BlazorAppIdentity.Model
@using BlazorAppIdentity.Services

@inject IBlogService _blogService
@inject NavigationManager _navigation

<div class="row">
    <div class="col-md-6">
        <h3 class="d-inline">Blog details - Basic</h3>
    </div>
    <div class="col-md-6 text-end">
        <button class="d-inline btn btn-primary" @onclick="BackToList">Back to Blog List</button>
    </div>
</div>

@if (editBlog == null)
{
    <h1>No Blogs details found to particular blog</h1>
}
else if (isNotFound)
{
    <p><em>Blog post not found.</em></p>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-2">
                <div class="card mt-5">
                    <div class="card-body">
                        <h5 class="card-title">@editBlog.Name</h5>
                        <p class="card-text">@editBlog.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private BlogViewModel editBlog;
    private bool isNotFound = false;
    [Parameter]
    public int blogId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            editBlog = await _blogService.GetByIdAsync(blogId);
            if (editBlog == null)
            {
                isNotFound = true;
            }
        }
        catch (Exception ex)
        {
            // Log the exception or handle it as needed
            Console.WriteLine(ex.Message);
            isNotFound = true;
        }
    }

    private void BackToList()
    {
        _navigation.NavigateTo("/blog/blogs");
    }
}
